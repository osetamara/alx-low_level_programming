#include <stdio.h>
#include <stdlib.h>

/**
 * save_password - print the character
 * @password: print the password
 * Return: 0 alway
 */
void save_password(char *password) {
    FILE *fp;

    /* Open the file for writing */
    fp = fopen("101-password", "w");

    /* Write the password to the file */
    fprintf(fp, "%s", password);

    /* Close the file */
    fclose(fp);

    /* Success message */
    printf("Password saved successfully!\n");
}

/**
 * main - print main character
 * Return: 0
 */
int main()
{
    char password[20];

    /* Read the password from user input */
    printf("Enter your password: ");
    scanf("%s", password);

    /* Save the password to a file */
    save_password(password);

    return 0;
}
